{
  "openapi": "3.0.0",
  "info": {
    "title": "Óptica API",
    "version": "1.0.0",
    "description": "API para la gestión de ópticas"
  },
  "servers": [
    {
      "url": "http://localhost:8000",
      "description": "Servidor local"
    }
  ],
  "paths": {
    "/personas": {
      "get": {
        "summary": "Obtiene todas las personas",
        "tags": ["Personas"],
        "responses": {
          "200": {
            "description": "Lista de personas obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Persona"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crea una nueva persona",
        "tags": ["Personas"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Persona"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Persona creada exitosamente"
          }
        }
      }
    },
    "/personas/{id}": {
      "get": {
        "summary": "Obtiene una persona por ID",
        "tags": ["Personas"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID de la persona a obtener"
          }
        ],
        "responses": {
          "200": {
            "description": "Persona encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Persona"
                }
              }
            }
          },
          "404": {
            "description": "Persona no encontrada"
          }
        }
      },
      "put": {
        "summary": "Actualiza una persona por ID",
        "tags": ["Personas"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID de la persona a actualizar"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Persona"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Persona actualizada exitosamente"
          },
          "404": {
            "description": "Persona no encontrada"
          }
        }
      },
      "delete": {
        "summary": "Elimina una persona por ID",
        "tags": ["Personas"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID de la persona a eliminar"
          }
        ],
        "responses": {
          "200": {
            "description": "Persona eliminada exitosamente"
          },
          "404": {
            "description": "Persona no encontrada"
          }
        }
      }
    },
    "/clientes": {
      "post": {
        "summary": "Crea un nuevo cliente",
        "tags": ["Clientes"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Cliente"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Cliente creado exitosamente"
          },
          "400": {
            "description": "Error de validación"
          },
          "500": {
            "description": "Error al crear cliente"
          }
        }
      },
      "get": {
        "summary": "Obtiene todos los clientes",
        "tags": ["Clientes"],
        "responses": {
          "200": {
            "description": "Lista de clientes obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Cliente"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/productos": {
      "get": {
        "summary": "Obtiene todos los productos",
        "tags": ["Productos"],
        "responses": {
          "200": {
            "description": "Lista de productos obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Producto"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crea un nuevo producto",
        "tags": ["Productos"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Producto creado exitosamente"
          }
        }
      }
    },
    "/productos/{id}": {
      "get": {
        "summary": "Obtiene un producto por ID",
        "tags": ["Productos"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID del producto a obtener"
          }
        ],
        "responses": {
          "200": {
            "description": "Producto encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Producto"
                }
              }
            }
          },
          "404": {
            "description": "Producto no encontrado"
          }
        }
      },
      "put": {
        "summary": "Actualiza un producto por ID",
        "tags": ["Productos"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID del producto a actualizar"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Producto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Producto actualizado exitosamente"
          },
          "404": {
            "description": "Producto no encontrado"
          }
        }
      },
      "delete": {
        "summary": "Elimina un producto por ID",
        "tags": ["Productos"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "schema": { "type": "string" },
            "description": "ID del producto a eliminar"
          }
        ],
        "responses": {
          "200": {
            "description": "Producto eliminado exitosamente"
          },
          "404": {
            "description": "Producto no encontrado"
          }
        }
      }
    },
    "/productos/search": {
      "get": {
        "summary": "Busca productos por nombre",
        "tags": ["Productos"],
        "parameters": [
          {
            "in": "query",
            "name": "nombre",
            "required": true,
            "schema": { "type": "string" },
            "description": "Nombre (o parte del nombre) del producto a buscar"
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de productos encontrados",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Producto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "No se encontraron productos"
          }
        }
      }
    },
    "/tipo_lentes": {
      "get": {
        "summary": "Obtiene todos los tipos de lentes",
        "tags": ["Lentes"],
        "responses": {
          "200": {
            "description": "Lista de tipos de lentes obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tipo_Lentes"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/tipo_material": {
      "get": {
        "summary": "Obtiene todos los tipos de materiales",
        "tags": ["Material"],
        "responses": {
          "200": {
            "description": "Lista de tipos de materiales obtenida exitosamente",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tipo_Materiales"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Persona": {
        "type": "object",
        "properties": {
          "PersonaID": { "type": "string" },
          "Nombre": { "type": "string" },
          "Apellidos": { "type": "string" },
          "Contrasenia": { "type": "string" },
          "CorreoElectronico": { "type": "string" }
        }
      },
      "Cliente": {
        "type": "object",
        "properties": {
          "PersonaID": { "type": "number" }
        }
      },
      "Producto": {
        "type": "object",
        "properties": {
          "ID": { "type": "number" },
          "Nombre": { "type": "string" },
          "Descripcion": { "type": "string" },
          "Precio_Normal": { "type": "number", "format": "float" },
          "Precio_Oferta": { "type": "number", "format": "float" },
          "Imagen": { "type": "string" },
          "Cantidad": { "type": "integer" },
          "Marca": { "type": "string" },
          "Modelo": { "type": "string" },
          "Edad": { "type": "integer" },
          "Genero": {
            "type": "string",
            "enum": ["Masculino", "Femenino", "Unisex"]
          },
          "Categoria": {
            "type": "string",
            "enum": ["Sol", "Lectura", "Protección"]
          },
          "Material": { "type": "number" },
          "Tamaño": {
            "type": "string",
            "enum": [
              "Chico",
              "Extra chico",
              "Mediano",
              "Grande",
              "Extra grande"
            ]
          },
          "Color": { "type": "string" },
          "Tipo": { "type": "number" }
        }
      },
      "Tipo_Lentes": {
        "type": "object",
        "properties": {
          "ID": { "type": "number" },
          "Nombre": { "type": "string" },
          "Imagen": { "type": "string" }
        }
      },
      "Tipo_Materiales": {
        "type": "object",
        "properties": {
          "ID": { "type": "number" },
          "Nombre": { "type": "string" }
        }
      }
    }
  }
}
